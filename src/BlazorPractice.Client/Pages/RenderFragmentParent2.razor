@page "/render-fragment-parent-2"
@layout Layout

<div style="flex-direction: row;">

    <h1>Render child content</h1>

    @for (int c = 0; c < 3; c++)
    {
        var current = c;

        <RenderFragmentChild>
            Count: @current
        </RenderFragmentChild>
    }

    @foreach (var c in Enumerable.Range(0, 3))
    {
        <RenderFragmentChild>
            Count: @c
        </RenderFragmentChild>
    }

    <h1>Hello, world!</h1>

    @RenderWelcomeInfo

    <p>Render the welcome info a second time:</p>

    @RenderWelcomeInfo

</div>

@code{

    private RenderFragment RenderWelcomeInfo = __builder =>
    {
        <p>Welcome to your new app!</p>
    };

}
