<hr />

<h1>@pageTitle</h1>

<h4>New Ship Entry Form</h4>

<EditForm Model="@starship" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-12">
            <InputRadioGroup @bind-Value="starship.Manufacturer">
                Manufacturer:
                <br>
                @foreach (var manufacturer in (BlazorPractice.Shared.ComponentEnums.Manufacturer[])Enum.GetValues(typeof(BlazorPractice.Shared.ComponentEnums.Manufacturer)))
                {
                    <InputRadio Value="@manufacturer" />
                    <text>&nbsp;</text>

                    @manufacturer

                    <br>
                }
            </InputRadioGroup>
        </div>
        <div class="col-md-12">
            <p>
                Select one engine and one color. Recommendations are paired but any
                combination of engine and color is allowed:<br>
                <InputRadioGroup Name="engine" @bind-Value="starship.Engine">
                    <InputRadioGroup Name="color" @bind-Value="starship.Color">
                        <InputRadio Name="engine" Value="@BlazorPractice.Shared.ComponentEnums.Engine.Ion" />
                        Engine: Ion<br>
                        <InputRadio Name="color" Value="@BlazorPractice.Shared.ComponentEnums.Color.ImperialRed" />
                        Color: Imperial Red<br><br>
                        <InputRadio Name="engine" Value="@BlazorPractice.Shared.ComponentEnums.Engine.Plasma" />
                        Engine: Plasma<br>
                        <InputRadio Name="color" Value="@BlazorPractice.Shared.ComponentEnums.Color.SpacecruiserGreen" />
                        Color: Spacecruiser Green<br><br>
                        <InputRadio Name="engine" Value="@BlazorPractice.Shared.ComponentEnums.Engine.Fusion" />
                        Engine: Fusion<br>
                        <InputRadio Name="color" Value="@BlazorPractice.Shared.ComponentEnums.Color.StarshipBlue" />
                        Color: Starship Blue<br><br>
                        <InputRadio Name="engine" Value="@BlazorPractice.Shared.ComponentEnums.Engine.Warp" />
                        Engine: Warp<br>
                        <InputRadio Name="color" Value="@BlazorPractice.Shared.ComponentEnums.Color.VoyagerOrange" />
                        Color: Voyager Orange
                    </InputRadioGroup>
                </InputRadioGroup>
            </p>
        </div>
        <div class="col-md-12">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>

</EditForm>

@code {
    private string pageTitle = "单选按钮";

    private Starship2 starship = new Starship2();

    private void HandleValidSubmit()
    {
        Logger.LogInformation("HandleValidSubmit called");

        // Process the valid form
    }
}
